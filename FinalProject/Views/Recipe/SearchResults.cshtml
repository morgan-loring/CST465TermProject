

@model List<RecipeModel>

<h1>Recipe List</h1>

@Html.ActionLink("Add a Recipe", "AddRecipe", "Recipe")


@if (Model == null || Model.Count == 0)
{
    <h2>No results found!</h2>
}
else
{
    @for (int ii = 0; ii < Model.Count; ii++)
    {
        <div class="card">
            <div class="card-body">
                @Html.ActionLink(Model[ii].Name, "DisplayRecipe", "Recipe", new { Model[ii].ID })
                <p>@Model[ii].Description</p>
            </div>
        </div>
    }
}