

@model List<RecipeModel>

@if (Model.Count == 0)
{
    <div>No results found!</div>
}
else
{
    @for (int ii = 0; ii < Model.Count; ii++)
    {
        <div class="card">
            <div class="card-body">
                @Html.ActionLink(Model[ii].Name, "DisplayRecipe", "Recipe", new { Model[ii].ID })
                <p>@Model[ii].Description</p>
            </div>
        </div>
    }
}